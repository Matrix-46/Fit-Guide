# .env.example - Template for environment variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# Admin Credentials (CHANGE THESE!)
ADMIN_EMAIL=abhinandan@admin.com
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_USERNAME=Abhinandan

# CORS Configuration
# For local development, use localhost. For production, change to your actual domain
FRONTEND_URL=http://localhost:8000
# Example for production: FRONTEND_URL=https://your-frontend.onrender.com

# Database (optional - defaults to SQLite if not set)
# DATABASE_URL=postgresql://user:password@host:port/database
